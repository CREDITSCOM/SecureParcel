@model SecureParcel.Classes.Database.Parcel

@{
    ViewBag.Title = "Pay for parcel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-6">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <a class="btn-1" href="/Admin/Index"><i class="fas fa-arrow-alt-circle-left"></i> Back</a>
                </div>
                <div class="col-md-6 delete-btn-div">
                    <button type="submit" class="btn-1"><i class="fab fa-amazon-pay"></i> Pay for @Model.Name</button>
                </div>
            </div>
        }
    </div>
</div>
