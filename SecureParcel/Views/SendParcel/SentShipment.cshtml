
@{
    ViewBag.Title = "SentShipment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="Shipments flex" id="main">
    <div class="container mb-135">
        <form action="/" method="post">
            <div class="border-bottom-red">
                <h2 class="Shipments-title">
                    Create a new shipment
